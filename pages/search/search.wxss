.bg{
  background-color: #dadada;
}
.section{
  padding: 15rpx 20rpx;
  background-color: #0380e5;
  
}
.section input{
  border: solid 2rpx #ccc;
  padding: 10rpx 10rpx;
  background-color: #fff;
  border-radius: 4rpx;
  height: 30rpx;
}

.content{
  background-color: #fff; 
  margin: 15rpx 15rpx 5rpx 15rpx;
  border: solid 0rpx #eee;
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif ;
  box-shadow: 5rpx 5rpx 5rpx 0rpx #aaa;
  /* font-size: small */
}
.line {
  margin-top: 30rpx;
  background: #e0e0e0;
  height: 1rpx;
}
.name {
  font-weight: bold;
}

.author, .publish, .isbn, .bookid, .libLocation, .libStatus {
  font-size: small;
}